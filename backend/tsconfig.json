{
  "compilerOptions": {
    /* ======================================================
     * TARGET & MODULE
     * ====================================================== */
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",

    /* ======================================================
     * PROJECT STRUCTURE
     * ====================================================== */
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
      "@integrations/*": ["integrations/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"]
    },

    /* ======================================================
     * TYPE SAFETY (arquitectura first)
     * ====================================================== */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,

    /* ======================================================
     * INTEROP & DX
     * ====================================================== */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* ======================================================
     * OUTPUT & DEBUGGING
     * ====================================================== */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },

  /* ======================================================
   * FILES
   * ====================================================== */
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
