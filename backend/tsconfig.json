{
  "compilerOptions": {
    /* ======================================================
     * TARGET & MODULE
     * ====================================================== */
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",

    /* ======================================================
     * PROJECT STRUCTURE
     * ====================================================== */
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
      "@integrations/*": ["integrations/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"]
    },

    /* ======================================================
     * TYPE SAFETY (arquitectura first)
     * ====================================================== */
    "strict": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": false,
    "forceConsistentCasingInFileNames": true,

    /* ======================================================
     * INTEROP & DX
     * ====================================================== */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* ======================================================
     * OUTPUT & DEBUGGING
     * ====================================================== */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },

  /* ======================================================
   * FILES
   * ====================================================== */
  "include": ["src/**/*", "prisma/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test/**/*"
  ]
}
