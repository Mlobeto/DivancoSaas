{
  "compilerOptions": {
    /* ======================================================
     * TARGET & MODULE
     * ====================================================== */
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",

    /* ======================================================
     * PROJECT STRUCTURE
     * ====================================================== */
    "outDir": "./dist",
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@modules/*": ["src/modules/*"],
      "@integrations/*": ["src/integrations/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"]
    },

    /* ======================================================
     * TYPE SAFETY (arquitectura first)
     * ====================================================== */
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "forceConsistentCasingInFileNames": true,

    /* ======================================================
     * INTEROP & DX
     * ====================================================== */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* ======================================================
     * OUTPUT & DEBUGGING
     * ====================================================== */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },

  /* ======================================================
   * FILES
   * ====================================================== */
  "include": [
    "src/**/*",
    "prisma/**/*",
    "../shared/src/context/request-context.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test/**/*"
  ]
}
